@model IEnumerable<assignment.Models.ExpenseView>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="offset-4">Expense Information</h2>
<div class="row">
    <div class="col">
        <form>
                <div class="row mb-2" style="align-items:end;">
                <label class="col-form-label col-1">From Date:</label>
                    <div class="col-md-2">
                        <input type="date" id="from" class="form-control form-control-sm" />
                    </div>
                    <label class="col-form-label col-1">To Date:</label>
                    <div class="col-md-2">
                        <input type="date" id="to" class="form-control form-control-sm" />
                    </div>
                    <div class="col-md-2">
                     <button type="button" class="btn btn-outline-secondary btn-sm"><i class="fa fa-search"></i> Search</button>
                    </div>
                </div>
        </form>
    </div>    
</div>
<div class="row">

    <div class="col">
        
       
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category</th>
                    <th>Date of Expense</th>
                    <th>Total Amount</th>
                    <th>
                        <a class="btn btn-success btn-sm" asp-action="Create" asp-controller="Expense"><i class="fa fa-plus"></i> New</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.Id</td>
                        <td>@e.CategoryName</td>
                        <td>@e.DateOfExpense.ToShortDateString()</td>
                        <td>@e.TotalAmount</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Expense" asp-route-id="@e.Id" class="btn btn-info btn-sm"><i class="fa fa-edit"></i></a>
                            <a asp-action="Delete" asp-controller="Expense" asp-route-id="@e.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure to delete?')"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


