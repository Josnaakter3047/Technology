@model assignment.Models.Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="offset-3 col-md-12">
    <div class="row">
        <div class="col">
            <div class="card col-md-6 mt-3">
                <div class="card-header">
                    <h2 class="card-title">Edit Category</h2>
                </div>
                <div class="card-body">

                    <form id="frmCreate" asp-action="Edit" asp-controller="Categories"
                          data-ajax="true"
                          data-ajax-method="Post"
                          data-ajax-mode="replace"
                          data-ajax-update="#msg"
                          data-ajax-success="Success">
                        <div id="msg">
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mb-2">
                            <label class="col-form-label col-md-3">Category Name</label>
                            <div class="col-md-6">
                                <input asp-for="CategoryName" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-2 card-footer">
                            <div class="offset-3 col-md-6">
                                <button type="submit" class="btn btn-success">Update</button>
                                <a asp-action="Index" asp-controller="Categories">Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/ajax/jquery.unobtrusive-ajax.js"></script>
    <script>
        function Success() {
            $("#frmCreate").trigger("reset");
        }
    </script>

}

