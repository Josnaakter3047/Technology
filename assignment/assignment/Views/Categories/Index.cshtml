@model IEnumerable<assignment.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<div class="row">

    <div class="col">
        <h2 class="offset-4">Category List</h2>
        
        <table class="table table-bordered table-striped w-50 offset-2">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category Name</th>
                    <th>
                        <a class="btn btn-success btn-sm" asp-action="Create" asp-controller="Categories"><i class="fas fa-plus"></i> New</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Id</td>
                        <td>@c.CategoryName</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Categories" asp-route-id="@c.Id" class="btn btn-info btn-sm"><i class="fa fa-edit"></i></a>
                            <a asp-action="Delete" asp-controller="Categories" asp-route-id="@c.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure to delete?')"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

